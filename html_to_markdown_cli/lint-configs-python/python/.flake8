[flake8]
ignore          = E501,D100,D101,D102,D103,D104,D105, E203, E266, E501, W503
select          = E901,E999,F821,F822,F823
max-line-length = 200
max-complexity  = 18
show_source     = True
statistics      = True
# select        = B,C,E,F,W,T4,B9
exclude =
    .tox,
    __pycache__,
    .ci,
    contrib,
    example-notebooks,
    script,
    shared_funcs,
    try.py

